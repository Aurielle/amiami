<table width="100%" class="figurky">
	<tbody n:inner-foreach="$figures as $f">
		<tr>
			<td>
				<a href="{$imagePrefix}{$f->image_basename}" rel="fancybox">
					<img src="{$imagePrefix}{$f->image_thumb}" alt="" width="150" height="150" class="alignnone size-thumbnail">
				</a>
			</td>
			<td>
				<h3><strong>{$f->name}</strong></h3>
				<p>
					<strong>Postava:</strong> {$f->character}<br>
					<strong>Výrobce:</strong> {$f->manufacturer}<br>
					<strong>V prodeji:</strong> {$f->releasedate|date:'Y/m'}<br>
					<strong>Oficiální cena / cena na AmiAmi:</strong> {$f->price|number:0:',':' '} jenů / {$f->internetprice|number:0:',':' '} jenů
				</p>
				<p>
					<a href="{$f->link}">AmiAmi link</a>
				</p>
			</td>
		</tr>
	</tbody>
</table>